{
    "manifest_version": 3,
    "name": "Pomodoro Site Blocker",
    "version": "1.0",
    "description": "Blocks distracting websites during Pomodoro focus sessions.",
    "permissions": ["storage", "webRequest", "webRequestBlocking", "tabs"],
    "host_permissions": ["*://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  